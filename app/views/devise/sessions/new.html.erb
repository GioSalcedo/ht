<h2><%= t('.sign_in') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"inputs-form" %>
  </div>

  <div class="field">
    <%= f.label :password, class:"input-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"inputs-form" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class:"inputs-checkbox" %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions btn-primary">
    <%= f.submit t('.sign_in') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
